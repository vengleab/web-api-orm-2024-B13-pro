generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id Int @id @default(autoincrement()) @unique
  username String @db.VarChar(50)
  password String @db.VarChar()
  isActive Boolean @default(false) @map("is_active")
}
